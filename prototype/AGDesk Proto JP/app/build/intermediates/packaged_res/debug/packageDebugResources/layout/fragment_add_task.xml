<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.AddTaskFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/iv_back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Add new task"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of Task"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:hint="e.g Pruning"
                android:padding="15dp"
                android:textSize="16sp"
                android:textColor="@color/textColor"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:hint="Enter task description"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:gravity="top|start"
                android:padding="15dp"
                android:textSize="16sp"
                android:textColor="@color/textColor"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due Date"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:hint="Select Due Date"
                android:textSize="16sp"
                android:focusable="false"
                android:drawableEnd="@drawable/iv_calender"
                android:padding="15dp"
                android:textColor="@color/textColor"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry Date"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etExpiryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:hint="Select Expiry Date"
                android:textSize="16sp"
                android:focusable="false"
                android:drawableEnd="@drawable/iv_calender"
                android:padding="15dp"
                android:textColor="@color/textColor"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:padding="15dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:padding="15dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assigned ID"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etAssignedId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:hint="Enter assigned ID"
                android:inputType="number"
                android:padding="15dp"
                android:textSize="16sp"
                android:textColor="@color/textColor"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assigned To"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etAssignedName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:hint="Enter assigned name"
                android:padding="15dp"
                android:textSize="16sp"
                android:textColor="@color/textColor"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farm ID"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etFarmId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:hint="Enter farm ID"
                android:inputType="number"
                android:padding="15dp"
                android:textSize="16sp"
                android:textColor="@color/textColor"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddNow"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="15dp"
                android:text="Add now"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>