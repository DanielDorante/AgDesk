<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rlItemTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#732AAE37"
        android:padding="15dp">

        <LinearLayout
            android:layout_toStartOf="@+id/ivImage"
            android:layout_toEndOf="@+id/cvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fertilise Crops"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harvesting"
                android:drawableStart="@drawable/iv_task_icon"
                android:drawableTint="@color/textColor"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTaskTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:32 AM - 03:15 PM"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

        </LinearLayout>        <ImageView
        android:id="@+id/ivImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/iv_plant"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/bg_circle"
        android:textColor="@color/main"
        android:textSize="16sp"
        android:layout_toStartOf="@+id/btnMenu"/>

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_more"
            android:contentDescription="Menu options"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_alignParentEnd="true"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_margin="1dp"
            app:cardBackgroundColor="@color/white">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTaskDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21\nAug"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:textColor="@color/main"
                android:textSize="16sp"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>