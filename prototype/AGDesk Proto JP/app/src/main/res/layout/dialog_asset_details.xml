<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_gravity="end"
        android:paddingStart="10dp"
        android:paddingVertical="10dp"
        android:src="@drawable/baseline_cancel_24"
        app:tint="@color/dark_main"/>

    <!-- Asset Image -->
    <ImageView
        android:id="@+id/ivAssetImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <!-- Asset Name & Status -->
    <TextView
        android:id="@+id/tvAssetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Quad Bike"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAssetStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checked Out"
        android:textSize="14sp"
        android:textColor="@color/red"
        android:layout_marginTop="4dp"
        android:padding="4dp"/>

    <Button
        android:id="@+id/btnCheckIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check in"
        android:textColor="@color/white"
        android:backgroundTint="@color/dark_main"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvPrefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prefix: QB"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvManufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manufacturer: Yamaha"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: North Field"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvVin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIN: 128468"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSerialNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serial No: SN769128"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDateMade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Made: 2018"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDatePurchased"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Purchased: 2919"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration #: ABC123"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvParts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parts: Spare The"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvFarmId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farm ID: 001"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
