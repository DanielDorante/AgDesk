<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/iv_back" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add new asset"
                android:layout_centerInParent="true"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Asset Prefix Dropdown -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asset Type*"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerAssetPrefix"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_spinner"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

        <!-- Asset Name Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asset Name*"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etAssetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:hint="Enter asset name"
            android:inputType="text"
            android:layout_marginTop="4dp"/>

        <!-- Manufacturer Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manufacturer"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etManufacturer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:hint="Enter manufacturer"
            android:inputType="text"
            android:layout_marginTop="4dp"/>

        <!-- Parts Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parts"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etParts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:hint="Enter parts list"
            android:inputType="textMultiLine"
            android:lines="3"
            android:layout_marginTop="4dp"/>

        <!-- Location Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:hint="Enter location"
            android:inputType="text"
            android:layout_marginTop="4dp"/>

        <!-- Date Manufactured -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Manufactured"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etDateManufactured"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:hint="Select date"
                android:focusable="false"
                android:clickable="true"
                android:layout_marginTop="4dp"/>

            <ImageView
                android:id="@+id/ivDateManufacturedPicker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/iv_calender"
                android:padding="12dp"/>
        </LinearLayout>

        <!-- Date Purchased -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Purchased"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etDatePurchased"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:hint="Select date"
                android:focusable="false"
                android:clickable="true"
                android:layout_marginTop="4dp"/>

            <ImageView
                android:id="@+id/ivDatePurchasedPicker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/iv_calender"
                android:padding="12dp"/>
        </LinearLayout>

        <!-- Farm ID Field (Optional) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Farm ID (Optional)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etFarmId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:hint="Enter Farm ID"
            android:inputType="number"
            android:layout_marginTop="4dp"/>

        <!-- Image Upload Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asset Image"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/ivAssetImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_input"
                android:scaleType="centerInside"
                android:src="@drawable/iv_circle"/>

            <Button
                android:id="@+id/btnUploadImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- VIN Field - For LV, HV, LE -->
        <LinearLayout
            android:id="@+id/layoutVin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIN"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etVin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:hint="Enter VIN"
                android:inputType="text"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Serial Number Field - For SE -->
        <LinearLayout
            android:id="@+id/layoutSerialNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Serial Number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etSerialNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:hint="Enter Serial Number"
                android:inputType="text"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Registration Field - For LV, HV -->
        <LinearLayout
            android:id="@+id/layoutRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:hint="Enter Registration"
                android:inputType="text"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- QR Code Buttons -->
        <Button
            android:id="@+id/btnScanQR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan QR Code"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnGenerateQR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate QR Code"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvAssetDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asset Details will appear here"
            android:textSize="16sp"
            android:visibility="gone"
            android:padding="8dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveAsset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Asset"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"/>
    </LinearLayout>
</ScrollView>

